{
    "name": "manta",
    "displayName": "Manta IDE Flow",
    "description": "An intelligent, collaborative VS Code extension for real-time project flow and AI-assisted development.",
    "version": "1.0.0",
    "publisher": "your-name",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "manta.startProject",
                "title": "Manta: Start Project"
            },
            {
                "command": "manta.joinSession",
                "title": "Manta: Join Session"
            },
            {
                "command": "manta.delegateTask",
                "title": "Manta: Delegate Task"
            },
            {
                "command": "manta.approveMerge",
                "title": "Manta: Approve Merge"
            },
            {
                "command": "manta.commitLogic",
                "title": "Manta: Commit Logic"
            },
            {
                "command": "manta.commitStyles",
                "title": "Manta: Commit Styles"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "manta-sidebar",
                    "title": "Manta",
                    "icon": "resources/mantaray.svg"
                }
            ]
        },
        "views": {
            "manta-sidebar": [
                {
                    "type": "webview",
                    "id": "manta.sidebarPanel",
                    "name": "Control Panel"
                }
            ],
            "explorer": [
                {
                    "id": "mantaDutyQueue",
                    "name": "Duty Queue"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Manta Configuration",
            "properties": {
                "manta.serverUrl": {
                    "type": "string",
                    "default": "ws://localhost:3000",
                    "description": "WebSocket URL of the Manta backend server."
                },
                "manta.aiServerUrl": {
                    "type": "string",
                    "default": "http://localhost:8000",
                    "description": "HTTP URL of the Manta AI service."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "node esbuild.js",
        "watch": "node esbuild.js --watch",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.19.25",
        "@types/vscode": "^1.80.0",
        "@types/ws": "^8.18.1",
        "esbuild": "^0.19.0",
        "typescript": "^5.1.3",
        "vsce": "^2.12.0"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ws": "^8.13.0"
    }
}